function dist(v1,v2)
 return sqrt((v2.x-v1.x)^2 + (v2.y-v1.y)^2)
end

function normalize(v)
 local len=sqrt(v.x*v.x+v.y*v.y)
 v.x/=len
 v.y/=len
 return
end

